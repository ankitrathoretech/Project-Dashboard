<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>


<span class="page">
  <% if page.current? %>
    <span class="w-10 h-10 border border-gray-300 rounded-md flex items-center justify-center bg-blue-500 text-white">
      <%= page %>
    </span>
  <% else %>
    <%= link_to page, url, class: "w-10 h-10 border border-gray-300 rounded-md flex items-center justify-center hover:bg-gray-100", remote: remote, rel: page.rel %>
  <% end %>
</span>
